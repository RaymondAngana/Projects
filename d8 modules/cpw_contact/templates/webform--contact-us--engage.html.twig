{#
/**
 * @file
 * Theme implementation for a 'webform' element.
 *
 * This is an copy of the webform.html.twig theme_wrapper which includes the
 * 'title_prefix' and 'title_suffix' variables needed for
 * contextual links to appear.
 *
 * Available variables
 * - attributes: A list of HTML attributes for the wrapper element.
 * - children: The child elements of the webform.
 * - title_prefix: Additional output populated by modules, intended to be
 *   displayed in front of the main title tag that appears in the template.
 * - title_suffix: Additional output populated by modules, intended to be
 *   displayed after the main title tag that appears in the template.
 *
 * @see template_preprocess_webform()
 * @see _webform_form_after_build()
 *
 * @ingroup themeable
 */
#}

{% set classes = [
  'ln_c_contactus_form',
] %}
<div class="container">
  <div class="mod mod-contact-form" data-t-name="ContactForm">
      {{ title_prefix }}

      <div class="promotion-head-container">
        <h3 class="mod-promo-ndl-contact-form__headline">{{ 'Contact'|t }}</h3>
        <div class="option-container">
          <h4>{{ 'How can we help?'|t }}</h4>
          <a href="#" class="option-topic btn btn--primary">{{ 'Read more'|t }}</a>
        </div>
      </div>

      {% if element.elements.processed_text_01 is not empty %}
        {{ element.elements.processed_text_01 }}
      {% endif %}

      <form {{attributes.addClass(classes)}}>
        <div>
          <div class="form-item webform-component webform-component-radios webform-component--subject">
            {{ element.elements.form_wrapper.what_would_you_like_to_contact_us_about_today_ }}
          </div>
          <fieldset class="webform-component-fieldset webform-component--message-wrapper form-wrapper">
            <legend><span class="fieldset-legend">{{ element.elements.form_wrapper.how_we_can_help_you }}</span></legend>
            <div class="fieldset-wrapper">
              <div class="form-item webform-component webform-component-textarea webform-component--message-wrapper--your-message">
                {{ element.elements.form_wrapper.your_message }}
              </div>
              <div class="form-item webform-component webform-component-select webform-component--message-wrapper--related-product">
                {{ element.elements.form_wrapper.question_about }}
                {{ element.elements.form_wrapper.complaint_about }}
              </div>
              <div class="webform-component-fieldset webform-component--contact-information form-wrapper">
                {{ element.elements.form_wrapper.email_me }}
                {% if element.elements.form_wrapper.container.contact_number is not empty %}
                  {{ element.elements.form_wrapper.container.contact_number }}
                {% endif %}
                {% if element.elements.form_wrapper.city is not empty %}
                  {{ element.elements.form_wrapper.city }}
                {% endif %}
                {% if element.elements.form_wrapper.zipcode is not empty %}
                  {{ element.elements.form_wrapper.zipcode }}
                {% endif %}
                {% if element.elements.form_wrapper.street is not empty %}
                  {{ element.elements.form_wrapper.street }}
                {% endif %}
                {% if element.elements.form_wrapper.country is not empty %}
                  {{ element.elements.form_wrapper.country }}
                {% endif %}
              </div>
            </div>
          </fieldset>

          <fieldset class="webform-component-fieldset webform-component--contact-name form-wrapper">
            {% if element.elements.processed_text_message is not empty %}
              <legend><span class="fieldset-legend">{{ element.elements.processed_text_message }}</span></legend>
            {% endif %}
            <div class="fieldset-wrapper">
              {{ element.elements.contact_wrapper.your_first_name }}
              {{ element.elements.contact_wrapper.your_last_name }}
            </div>
          </fieldset>
          <div class="form-item webform-component webform-component-checkboxes webform-component--terms-and-conditions">
            <label for="edit-submitted-terms-and-conditions" class="form-required">{{ 'Terms and Conditions'|t }}</label>
            <div id="edit-submitted-terms-and-conditions" class="form-checkboxes">
              <div class="form-item form-type-checkbox form-item-submitted-terms-and-conditions-accepted">
                {{ element.elements.contact_wrapper.privacy_agreement }}
              </div>
            </div>
          </div>

          {{ title_suffix }}

          <div class="captcha webform-component--captcha">
            <legend class="fieldset-legend">
              <span>{{ 'CAPTCHA'|t }}</span>
            </legend>
            <div class="field-description">
              {{ element.elements.contact_wrapper.captcha["#description"] }}
            </div>
            {{ element.elements.contact_wrapper.captcha["captcha_sid"] }}
            {{ element.elements.contact_wrapper.captcha["captcha_token"] }}
            {{ element.elements.contact_wrapper.captcha["captcha_response"] }}
            {{ element.elements.contact_wrapper.captcha["captcha_widgets"] }}
          </div>

          <div class="form-actions">
            {{ element.form_token }}
            {{ element.form_build_id }}
            {{ element.form_id }}
            {{ element.elements.actions }}
          </div>
        </div>
      </form>
  </div>
</div>
